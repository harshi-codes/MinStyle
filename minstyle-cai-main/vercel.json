{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  // Changed from vite.config.ts
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://minstyle-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1",  // Added /dist/ to match output directory
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}